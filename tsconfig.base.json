			"@backend-demo/backend-libs/entities": [
				"libs/backend-libs/entities/src/index.ts"
			],
			"@backend-demo/backend-libs/events": [
				"libs/backend-libs/events/src/index.ts"
			],
			"@backend-demo/backend-libs/foreign-keys": [
				"libs/backend-libs/foreign-keys/src/index.ts"
			],
			"@backend-demo/backend-libs/modules/account-management": [
				"libs/backend-libs/modules/account-management/src/index.ts"
			],
			"@backend-demo/backend-libs/modules/database-module": [
				"libs/backend-libs/modules/database-module/src/index.ts"
			],
			"@backend-demo/backend-libs/modules/order-management": [
				"libs/backend-libs/modules/order-management/src/index.ts"
			],
			"@backend-demo/backend-libs/modules/product-management": [
