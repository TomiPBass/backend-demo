				"libs/backend-libs/queries/src/index.ts"
			],
			"@backend-demo/backend-libs/tables": [
				"libs/backend-libs/tables/src/index.ts"
			],
			"@backend-demo/shared/constants": [
				"libs/shared/constants/src/index.ts"
			],
			"@backend-demo/shared/enums": ["libs/shared/enums/src/index.ts"],
			"@backend-demo/shared/type-helpers": [
				"libs/shared/type-helpers/src/index.ts"
			]
		}
	},
	"exclude": ["node_modules", "tmp"]
